<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="fb-login-button" data-max-rows="1" data-size="icon" data-show-faces="false" data-auto-logout-link="false">
    </div>
    <%= link_to "Sign In With Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-primary"%></br>
    <%= link_to "Sign In with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary" %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
<%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :fullname, autofocus: true, class:"form-control", placeholder: "Full Name"%>
  </div>

  <div class="form-group">
    <%= f.email_field :email,class:"form-control", placeholder: "Email"%>
  </div>

  <div class="form-group">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:"Confirm Password" %>
  </div>
  <%= f.file_field :avatar %>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary"%>
  </div>
<% end %>
</div>
</div>
